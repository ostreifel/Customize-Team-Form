{
    "manifestVersion": 1,
    "id": "customize-team-form",
    "version": "1.1.1",
    "name": "Zen Form",
    "scopes": [ "vso.work", "vso.work_write" ],
    "description": "Create team specific form customizations.",
    "publisher": "ottostreifel",
    "icons": {
        "default": "dist/img/logo.svg"
    },
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "tags": [
        "Work Item",
        "Form",
        "Customize",
        "Team",
        "Agile",
        "Organization"
    ],
    "content": {
        "details": {
            "path": "details.md"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/ostreifel/Zen-Form"
    },
    "branding": {
        "color": "rgb(220, 235, 252)",
        "theme": "light"
    },
    "files": [
        {
            "path": "dist/img",
            "addressable": true
        },
        {
            "path": "dist/scripts",
            "addressable": true
        },
        {
            "path": "dist/page.html",
            "addressable": true
        },
        {
            "path": "dist/editForm.html",
            "addressable": true
        },
        {
            "path": "dist/css",
            "addressable": true
        }
    ],
    "categories": [
        "Plan and track"
    ],
    "contributions": [
        {  
            "id": "form-page",
            "type": "ms.vss-work-web.work-item-form-page",
            "description": "Team customizable page",
            "targets": [
                "ms.vss-work-web.work-item-form"
            ],
            "properties": {
                "name": "Zen Page",
                "uri": "page.html"
            } 
        },
        {
            "id": "edit-form",
            "type": "ms.vss-web.control",
            "description": "Editor for the form",
            "targets": [ ],
            "properties": {
                "uri": "editForm.html"
            }
        }
    ]
}
